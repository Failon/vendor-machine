{% extends 'base.html.twig' %}
{% block title %}Vendor Machine{% endblock %}
{% block body %}
    <div class="container">
        <h1>Vendor Machine</h1>
        <div class="row">
            <div class="col-sm-6">
                <table class="table">
                    <thead class="thead-light">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.code }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{  "%.2f"|format(product.price) }}</td>
                            <td>{{ product.stock }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-12">
                        <form action="#" class="form-inline">
                            <div class="form-group mb-2">
                                <label for="insertedCoins" class="sr-only">Inserted Coins</label>
                                <input type="text" readonly class="form-control-plaintext" id="insertedCoins" value="Total: {{ totalInserted }}">
                            </div>
                            <div class="form-group mx-sm-3 mb-2">
                                <label for="coins" class="sr-only">Coins</label>
                                <input type="number" max="100" min="0.05" step="0.05" class="form-control" id="coins" placeholder="coins..">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Insert Coin</button>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <form action="#" class="form-inline">
                            <div class="form-group mb-2">
                                <label for="product" class="sr-only">Product Selection</label>
                                <select name="product" id="product" class="form-control">
                                    {% for product in products %}
                                        <option value="{{ product.code }}">{{ product.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary mx-sm-3 mb-2">Purchase</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}